@font-face {
  font-family: OpenSans;
  src: url(../fonts/OpenSans-Bold.woff);
  font-weight: 700;
  font-style: normal;
}

@font-face {
  font-family: OpenSans;
  src: url(../fonts/OpenSans-Regular.woff);
  font-weight: 400;
  font-style: normal;
}

html {
  font-family: "OpenSans", "Arial", sans-serif;
}

a {
  text-decoration: none;
}

.header {
  position: relative;
  color: #ffffff;
  background-color: #0a0e34;
  padding-top: 45px;
  background-image: url("../images/football_1920.jpg");
  background-repeat: no-repeat;
  background-position: center center;
  background-size: cover;
}

.header,
.title,
.footer,
.download-app {
  text-transform: uppercase;
}

.header::after,
.footer::after {
  content: "";
  background-color: #0a0e34;
  opacity: 0.9;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.container {
  z-index: 1;
  width: 1557px;
  position: relative;
  margin: auto;
  margin-right: auto;
}

.header-logo,
.footer-logo {
  width: 191px;
  margin: 0 auto;
}

.surface-logo-text,
.btn-download-logo,
.btn-get-it-logo,
.surface-logo {
  fill: #ffffff;
}

.intro {
  display: block;
  margin: 0 auto;
  padding-top: 295px;
  font-size: 90px;
  font-weight: 700;
  /*line-height: 35px;*/
  letter-spacing: 5px;
}

.intro-second-line {
  display: block;
  text-align: right;
}

.header-link,
.footer-link {
  width: 673px;
  margin: 0 auto;
  font-size: 14px;
  letter-spacing: 1px;
  line-height: 14px;
  color: #ffffff;
  display: flex;
  justify-content: space-between;
}

.header-link {
  padding-top: 222px;
  padding-bottom: 110px;
}


.btn-download,
.btn-get-it {
  width: 311px;
  height: 77px;
  border-radius: 38px;
  background-color: #5e42b0;
  display: flex;
  cursor: pointer;
}

.btn-download-logo {
  width: 42px;
  padding-left: 38px;
  margin: auto 0;
}

.btn-get-it-logo {
  width: 42px;
  padding-left: 56px;
  margin: auto 0;
}

.btn-name {
  width: 160px;
  display: flex;
  flex-wrap: wrap;
  align-content: center;
  padding-left: 26px;
  line-height: 20px;
  list-style: none;
  color: #ffffff;
}

.btn-second-line {
  font-weight: 700;
}
/* --- начало main --- */

main {
  font-family: OpenSans, Arial, sans-serif;
  margin: 0;
}

.footballer {
  
}



.title {
  text-align: left;
  font-size: 80px;
  color: #e7e7e7;
}

































/* --- начало footer --- */
.footer {
  position: relative;
  color: #ffffff;
  background-color: #0a0e34;
  padding-top: 45px;
  background-image: url("../images/game_1920.jpg");
  background-repeat: no-repeat;
  background-position: center center;
  background-size: cover;
}

.download-app {
  width: 871px;
  height: 137px;
  display: flex;
  align-items: center;
  padding: 0;
  margin: 229px auto 151px;
  background: transparent;
  border: 0;
  cursor: pointer;
}

.download-app:hover,
.btn-download:hover,
.btn-get-it:hover {
  -moz-box-shadow: inset 0 0 10px #ffffff;
  -webkit-box-shadow: inset 0 0 10px #ffffff;
  box-shadow: inset 0 0 10px #ffffff;
  text-shadow: 3px 3px 4px #000000;

}

.btn-logo {
  width: 130px;
  border-radius: 20%;
  background: linear-gradient(#5e3db3, #50329c);
}

.download-text {
  width: 736px;
  margin: 0;
  color: #ffffff;
  padding-left: 26px;
  text-align: left;
  list-style: none;
  font-size: 80px;
  letter-spacing: 4px;
  font-weight: 700;
}

.text-second-line {
  display: block;
  font-size: 30px;
  letter-spacing: 0;
  font-weight: 400;
  color: #a496ca;

}

.footer-link {
  padding-bottom: 262px;
}


.footer-logo {
  padding-bottom: 52px;
}
